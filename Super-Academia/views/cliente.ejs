<!DOCTYPE html>
<html>
  <head>
    <title>Cliente | Super Academia</title>
    <link rel='stylesheet' src='../public/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <style>
      body {
          font-family: Arial, sans-serif;
          background-color: #f8f9fa;
      }
      header {
          background-color: #007bff;
          color: white;
          text-align: center;
          padding: 20px 0;
          font-size: 1.5rem;
      }
      .container {
          margin-top: 30px;
      }
      .card {
          border: none;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
          transition: transform 0.2s;
      }
      .card:hover {
          transform: scale(1.05);
      }
      .card-body {
          padding: 20px;
      }
  </style>
  </head>
  <body>
    <header class="bg-primary text-white text-center py-3">
        <h1>Bem-vindo à Super Academia</h1>
    </header>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Meu Progresso</h5>
                        <p class="card-text">Acompanhe seu desempenho e evolução.</p>
                        <a onclick="progresso()" href="#" class="btn btn-primary">Ver Detalhes</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Treinos</h5>
                        <p class="card-text">Acompanhe seu treinos.</p>
                        <a onclick="treinos()" href="#" class="btn btn-primary">Ver Detalhes</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Informações</h5>
                        <p class="card-text">Consulte suas informações</p>
                        <a onclick="info()" href="#" class="btn btn-primary">Ver Detalhes</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
      const url = new URL(window.location.href);
      const token = url.searchParams.get('token');
      const id = url.searchParams.get('id');

      function info() {
          window.location.href = `./cliente-info?token=${token}&id=${id}`;
      }

      function progresso() {
          window.location.href = `./cliente-progresso?token=${token}&id=${id}`;
      }

      function treinos() {
          window.location.href = `./cliente-treinos?token=${token}&id=${id}`;
      }
    </script>
</body>
</html>